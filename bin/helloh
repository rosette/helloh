#!/usr/bin/env ruby

def bail(msg)
  puts msg
  exit(1)
end

$:.unshift File.join(File.dirname(__FILE__), *%w[.. lib])

require "helloh"

directory = ARGV[0] || "./config/locales"

helloh = Helloh::Compare.new
helloh.files = Dir.glob(File.join(directory, "*.yml"))
helloh.compare!
helloh.output_results!
